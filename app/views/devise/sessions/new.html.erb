<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>


<div class="row">
  <div class="col-md-6">
    <div class="bs-component">
      <form>
        <fieldset>
          <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
          </div>
          <br>

          <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <br>

          <div class="form-group">
            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
          </div>
          <br>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= form.check_box :remember_me %>
              <%= form.label :remember_me %>
            </div>
          <% end %>
          <br>

          <div class="row center-block text-center">
              <div class="col-1">
              </div>
              <div class="col-10">
                <button type="submit" class="btn btn-outline-primary btn-block">ログイン</button>
              </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
<% end %>
