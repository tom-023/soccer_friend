  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: choose_edit ) do |f| %>
    <div class="user_form">
        <form>
          <fieldset>
            <div class="form-group">
              <h3><%= f.label :name, '名前' %></h3>
              <%= f.text_field :name, :class => 'form-control' %>
            </div>
            <br>
            <div class="form-group">
              <h3><%= f.label :email %></h3>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
            <br>
            <div class="form-group">
              <h3><%= f.label :support_team, '応援チーム' %></h3>
              <%= f.select :support_team, team, {prompt: "選択してください"},
                                              {class: 'form-control', id: 'exampleSelect1'} %>
            </div>
            <br>
            <div class="form-group">
              <h3><%= f.label :support_history %></h3>
              <div class="form-inline">
                <%= f.number_field :support_history,min:0,max:100,step:1, class: 'form-control' %>年
              </div>
            </div>
            <br>
            <div class="form-group">
              <h3><%= f.label :introduce, '自己紹介' %></h3>
              <%= f.text_area :introduce, class: "form_text" %>
            </div>
            <br>
            <div class="form-group">
              <h3><%= f.label :icon %></h3>
              <%= f.file_field :icon, id: "file" %>
              <hr />
              <img id="img", width="300" height="200">
            </div>
            <br>
            <% unless action_name == 'edit'%>
              <div class="form-group">
                <h3><%= f.label :password, t('views.messages.password') %></h3>
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                  <% if @minimum_password_length %>
                    <em><%= @minimum_password_length %><%= t('views.messages.characters-minimum') %></em>
                  <% end %>
              </div>
              <br>
              <div class="form-group">
                <h3><%= f.label :password_confirmation, t('views.messages.password_confirmation') %></h3>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </div>
            <% end %>
            <br>
            <!-- <div class="form-group">
              <h3><%= f.label :password %></h3>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %><%= t('views.messages.characters-minimum') %></em>
              <% end %>
            </div>
            <br>
            <div class="form-group">
              <h3><%= f.label :password_confirmation %></h3>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>
            <br> -->
            <!-- <div class="form-group">
              <h3><%#= f.label :current_password %></h3>
              <%#= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
            </div> -->
            <div class="row center-block text-center">
              <div class="col-1">
              </div>
              <div class="col-5">
                <input type="button" onclick="history.back()" value="戻る" class="btn btn-outline-secondary btn-block">
              </div>
              <div class="col-5">
                  <% if @user.new_record? %>
                    <button type="submit" class="btn btn-outline-primary btn-block">登録</button>
                  <% else %>
                    <button type="submit" class="btn btn-outline-primary btn-block">編集</button>
                  <% end %>
              </div>
            </div>
          </fieldset>
        </form>
  </div>
<% end %>
