<h2>プロフィール</h2>
<div class="card" style="width: 20rem;">
  <% if @user.icon? %>
    <%= image_tag @user.icon.thumb.url, class: "card-img-top" %>
  <% else %>
    <%= image_tag 'football.jpg', class: "card-img-top" %>
  <% end %>
  <div class="card-body">
    <h3 class="card-title"><%= @user.name %></h3>
    <div class="profile_support_team"><span>応援チーム</span></div>
    <p><%= @user.support_team %></p>
    <div class="profile_support_history"><span>サポーター歴</span></div>
    <p><%= @user.support_history %>年</p>

    <div class="profile_introduce"><span>自己紹介</span></div>
    <p><%= @user.introduce %></p>
    <%= link_to '編集', edit_user_registration_path(@user.id), class: 'btn btn-success' %>
  </div>
</div>
