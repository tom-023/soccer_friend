<% @events.each do |event| %>
  <article >
    <span class="date"><%= event.created_at.strftime('%Y/%m/%d') %></span>
    <h1><%= "#{event.user.name}さんの投稿" %></h1>
    <ul>
      <li class="content"><%= event.content %></li>
      <li>
        <div class="btn">
          <%= link_to '詳細', event %>
        </div>
      </li>
    </ul>
  </article>
<% end %>
