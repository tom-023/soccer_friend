</div>


    <div class="container">

      <div class="row">

  <% @events.each do |event| %>
  <div class="col-lg-4">
  <div class="card" style="width: 20rem;">
  <div class="card-img-top">
    <% if event.organizer.icon? %>
      <%#= image_tag @user.icon.url %>
    <% else %>
      <%= image_tag 'soccer_ball.jpg', :width => '100%', :height => '100%' %>
    <% end %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= event.title %></h5>
    <p class="card-text"><%= event.content %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= event.cheering_team %></li>
    <li class="list-group-item"><%= event.place %></li>
    <li class="list-group-item"><%= event.day.strftime('%Y/%m/%d') %></li>
  </ul>
  <div class="card-body">
    <div class="card-link"><%= link_to '詳細', event_path(event.id) %></div>
  </div>
  </div>
  </div>
  <% end %>
</div>
<br>
<%= paginate @events %>
</div>
